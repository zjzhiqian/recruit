            </if>
            <if test="education != null">
                education,
            </if>
            <if test="peopleCount != null">
                people_count,
            </if>
            <if test="workYear != null">
                work_year,
            </if>
            <if test="salary != null">
                salary,
            </if>
            <if test="probation != null">
                probation,
            </if>
            <if test="workArea != null">
                work_area,
            </if>
            <if test="detailArea != null">
                detail_area,
            </if>
            <if test="title != null">
                title,
            </if>
            <if test="introduction != null">
                introduction,
            </if>
            <if test="concactName != null">
